/* pages/user/profile.wxss */
.content{
  background-color: #f2f2f2;
  height: 100vh;
}
.profile{
  margin-bottom: 5px;
}
.profile .item{
  background-color: #fff;
  border-bottom: 1px solid #e2e2e2;
  font-size: 16px;
  padding: 8px;
  line-height: 40px;
}
.item .icon-l{
  padding: 0 2%;
  width: 28px;
  height: 28px;
  vertical-align:middle;
}
.item .icon-r{
  padding: 0 2%;
  float: right;
  width: 16px;
  height: 16px;
  padding-top: 12px;
}
.orange-txt{
  color: rgb(255, 123, 0);
}
.gray-text{
  color: #888
}
.new-msg{
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  border-radius: 10px;
  margin-left: 5px;
  background-color: rgb(255, 123, 0);
  color: #fff;
}